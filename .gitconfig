[alias]
  a = add -A
  am = commit -a --ammend
  br = branch
  c = commit -m
  ca = commit -a -m
  ch = checkout
  chb = checkout -b
  d = difftool HEAD --no-prompt
  l = log --color --graph --pretty=format:'%Cred%h%Creset - %<|(60)%s %Cgreen%<(15)%ar%Creset %C(bold blue)<%an>%Creset %C(yellow)%d%Creset ' --abbrev-commit -10 --no-merges
  rb = rebase
  rhh = reset --hard HEAD
  s = status --short
[color]
	ui = true
[merge]
	tool = meld
[mergetool "meld"]
	cmd = meld.exe \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
[diff]
	tool = meld
[difftool "meld"]
	cmd = meld.exe \"$LOCAL\" \"$REMOTE\"
